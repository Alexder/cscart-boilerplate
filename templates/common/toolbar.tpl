{strip}
    <div class="top-panel">
        <div id="minimize_block" class="top-panel-wrapper">
            <div class="top-panel-logo">
                <i class="top-panel-icon-basket glyphicon glyphicon-shopping-cart fa fa-shopping-cart"></i>
            </div>
            <h4 class="top-panel-title">
                {$title nofilter}
            </h4>
            <div class="top-panel-action">
                <span class="top-panel-action-item">&nbsp;</span>
                <a href="{$href|fn_url}" class="top-panel-close top-panel-action_item cm-confirm"><i class="glyphicon glyphicon-remove-sign fa fa-times-circle"></i></a>
            </div>
        </div>
    </div>
{/strip}